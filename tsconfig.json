{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    },
    "target": "es5",
    "strict": true,
    "jsx": "react",
    "noEmit": true,
    "lib": ["dom", "ES2015"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["./tailwind.config.js", "src/**/*"],
  "exclude": ["node_modules/"],
  "files": ["declaration.d.ts"]
}
