{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~*": [
                "*"
            ]
        },
        "target": "es5",
        "strict": true,
        "jsx": "react",
        "noEmit": true,
        "lib": [
            "dom"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false
    },
    "include": [
        "tailwind.config.js",
        "./src/**/*"
    ],
    "exclude": [
        "node_modules/"
    ],
    "files": [
        "tailwind.config.d.ts",
        "declaration.d.ts"
    ]
}